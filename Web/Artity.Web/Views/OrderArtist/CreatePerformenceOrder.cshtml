@model Artity.Web.InputModels.Order.PerformenceOrderCreateInputModel
@{
    ViewData["Title"] = "Performence request";
}

<h1>Send request</h1>


<h4></h4>
<hr />
<div class="row mx-auto">
    <div class="col-md-5">
        <form method="post" asp-action="CreatePerformenceOrder" asp-controller="OrderArtist">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class=" row form-group">
                <div class="col-md-6">
                    <label asp-for="ArtistNikname"  class="control-label"></label>
                    <input asp-for="ArtistNikname" readonly value="@Model.ArtistNikname" class="form-control disabled" />
                    <span asp-validation-for="ArtistNikname" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PerformenceName" class="control-label"></label>
                    <input asp-for="PerformenceName" readonly  value="@Model.PerformenceName" type="text" class="form-control disabled" />
                    <span asp-validation-for="PerformenceName" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Feturing</span>
                    </div>
                    <textarea class="form-control" rows="4" asp-for="Message" aria-label="With textarea"></textarea>
                </div>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" class="form-control" type="date" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            


            <button class="btn btn-primary" type="submit">Send</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="All" asp-controller="Artists">Back to artist</a>
</div>

