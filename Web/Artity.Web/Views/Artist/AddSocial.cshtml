@model Artity.Web.InputModels.Social.SocialInputModel

@{int a = 5;}


<div class="container mt-4">
    <h1 class="text-center">Add or edit social links</h1>
    <hr />
</div>

<div class="row justify-content-center">

    <div class="col-md-4">
        <form method="post" asp-action="AddSocial" asp-controller="Artist" asp-route-id="@Model.ArtistId">
            <div class="form-group ">
                <label asp-for="Facebook"></label>
                <input asp-for="Facebook" class="form-control" />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Youtube"></label>
                <input asp-for="Youtube" class="form-control" />
                <span asp-validation-for="Youtube" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Website"></label>
                <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary pt-1 mb-2">Add</button>

        </form>
    </div>
</div>

